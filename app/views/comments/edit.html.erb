<h2 class="text-center fw-bold mt-5"> Edit Comment </h2>
<%= simple_form_for([@message,@comment]) do |f|%>
    <div class="container-lg mt-3 d-flex flex-column">
        <%= f.input :content, label: false,placeholder: "please write your content here...", class: "mt-2", :input_html => {:rows => 3}%>
        <%= f.button :submit, class: "btn btn-primary mt-2"%>
        <%= link_to "Back To The Message", message_path(@message), class: "btn btn-secondary mt-2"%>
    </div>
<%end%>

